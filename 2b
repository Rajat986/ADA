#include<stdio.h>
#include<time.h>
void main()
{
        clock_t start,end,tt;
        start=clock();
        int BinarySearch(int [], int,int);
        int n;
        printf("Enter size of array: ");
        scanf("%d",&n);
        int a[n],key;
        printf("Enter the array elements:\n");
        for(int i=0;i<n;i++)
                scanf("%d",&a[i]);

        printf("Enter the key element: ");
        scanf("%d",&key);

        int b=BinarySearch(a,key,n);
        if(b != -1)
                printf("Element found at position %d.\n",b);
        else
                printf("Element NOT found!!!");
        end=clock();
        tt=(double)(end-start);
        printf("\nStart: %ld\nEnd: %ld\nTotal Time: %ld\n",start,end,tt);
}

int BinarySearch(int a[],int key,int n)
{
        int high,low,mid,f=0;
        high=n-1;
        low=0;
        while(high >= low)
        {
                mid=(high+low)/2;
                if(a[mid] == key)
                {
                        f=1;
                        return mid+1;
                }
                else
                if(a[mid] < key)
                        low=mid+1;
                else
                        high=mid-1;
        }

        if(f==0)
                return -1;
}

Binary Search(Recursive):-
#include<stdio.h>
#include<time.h>
void main()
{
        clock_t start,end,tt;
        start=clock();
        int BinarySearch(int [], int,int,int);
        int n;
        printf("Enter size of array: ");
        scanf("%d",&n);
        int a[n],key;
        printf("Enter the array elements:\n");
        for(int i=0;i<n;i++)
                scanf("%d",&a[i]);

        printf("Enter the key element: ");
        scanf("%d",&key);

        int h=n-1,l=0;
        int b=BinarySearch(a,key,l,h);
        if(b != -1)
                printf("Element found at position %d.\n",b);
        else
                printf("Element NOT found!!!\n");

        end=clock();
        tt=(double)(end-start);
        printf("\nStart: %ld\nEnd: %ld\nTotal Time: %ld\n",start,end,tt);
}

int BinarySearch(int a[],int key,int l,int h)
{
        if(l > h)
                return -1;

        int mid=(h+l)/2;
        if(a[mid] == key)
                return mid+1;
        else
        if(key > a[mid])
                return BinarySearch(a,key,mid+1,h);
        else
                return BinarySearch(a,key,l,mid-1);
}

1.Input:
    Enter size of array: 5
    Enter the array elements:
    -5
    -2
    1
    34
    543
  Output:
    Enter the key element: 34
    Element found at position 4.
    
2.Input:
    Enter size of array: 4
    Enter the array elements:
    1
    3
    6
    9
    Enter the key element: 0
    Element NOT found!!!
