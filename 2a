#include<stdio.h>
#include<time.h>
void main()
{
        clock_t start,end,tt;
        start=clock();
        int LinearSearch(int [],int,int);
        int n,key;
        printf("Enter size of the array: ");
        scanf("%d",&n);
        int a[n],r;
        printf("Enter array elements:\n");
        for(int i=0;i<n;i++)
        {
                scanf("%d",&a[i]);
        }
        printf("Enter the key element: ");
        scanf("%d",&key);

        r= LinearSearch(a,key,n);
        if(r != -1)
        {
                printf("The element is found at position %d.\n",r);
        }
        else
                printf("Element NOT found!!!\n");
        end=clock();
        tt=(double)(end-start);
        printf("Start: %ld\nEnd: %ld\nTotal Time: %ld",start,end,tt);
}

int LinearSearch(int a[],int key, int n)
{
        int f=0;
        for(int i=0;i<n;i++)
        {
                if(a[i] == key)
                {
                        f=1;
                        return i+1;
                }
        }
        if(f==0)
                return -1;
}

Linear Search(Recursive):-
#include<stdio.h>
#include<time.h>
void main()
{
        clock_t start,end,tt;
        start=clock();
        int LinearSearch(int [],int,int);
        int n,key;
        printf("Enter size of the array: ");
        scanf("%d",&n);
        int a[n],r;
        printf("Enter array elements:\n");
        for(int i=0;i<n;i++)
        {
                scanf("%d",&a[i]);
        }
        printf("Enter the key element: ");
        scanf("%d",&key);

        r= LinearSearch(a,key,n);

        if(r>0 && r<=n)
                printf("The element is found at position %d.\n",r);
        else
                printf("Element not found!!!\n");

        end=clock();
        tt=(double)(end-start);
        printf("Start: %ld\nEnd: %ld\nTotal Time: %ld\n",start,end,tt);
}

int LinearSearch(int a[],int key, int n)
{
        if(a[n-1] == key)
                return n;
        else
                return LinearSearch(a,key,n-1);
}

1.Input:
    Enter size of the array: 7
    Enter array elements:
    1
    2
    3
    4
    5
    6
    7
  Output:
    Enter the key element: 8
    Element NOT found!!!
